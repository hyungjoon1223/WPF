<Window x:Class="RoutedEventApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEventApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseDown="Window_MouseDown" PreviewMouseDown="Window_PreviewMouseDown">
    <Grid MouseDown="Grid_MouseDown" PreviewMouseDown="Grid_PreviewMouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Orange" Margin="10" PreviewMouseDown="StackPanel_PreviewMouseDown" MouseDown="StackPanel_MouseDown">
            <Button >Test Button1</Button>
            <Button >Test Button2</Button>
            <Button MouseDoubleClick="Button_MouseDoubleClick" PreviewMouseDoubleClick="Button_PreviewMouseDoubleClick" PreviewMouseDown="Button_PreviewMouseDown" >Test Button3</Button>
            <Ellipse Height="30" Fill="Beige" MouseDown="Ellipse_MouseDown" PreviewMouseDown="Ellipse_PreviewMouseDown"/>
            <Ellipse Height="30" Width="100" Fill="Azure"/>
        </StackPanel>
    </Grid>
</Window>
